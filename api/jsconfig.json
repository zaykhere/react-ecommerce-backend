{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",  // You can adjust the target version if necessary
    "esModuleInterop": true,
    "allowJs": true,      // Allows JavaScript files to be compiled
    "resolveJsonModule": true,
    "skipLibCheck": true  // Optional: Skips type checking of declaration files for faster build times
  }
}

